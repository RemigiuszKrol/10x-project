---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import ThemeWrapper from "../components/ThemeWrapper";

interface Props {
  title?: string;
  showNavbar?: boolean;
}

const { title = "PlantsPlaner", showNavbar = false } = Astro.props;

// Pobierz dane użytkownika z locals (jeśli jest zalogowany)
const user = Astro.locals.user;
const userEmail = user?.email;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script
      set:html={`
      // Inicjalizacja motywu przed hydratacją React - zapobiega miganiu
      (function () {
        try {
          const storageKey = "plantsplaner-theme";
          const stored = localStorage.getItem(storageKey);
          if (stored === "light" || stored === "dark") {
            document.documentElement.classList.remove("light", "dark");
            document.documentElement.classList.add(stored);
          } else {
            // Domyślnie light jeśli nie ma zapisanego motywu
            document.documentElement.classList.remove("dark");
            document.documentElement.classList.add("light");
          }
        } catch {
          // W przypadku błędu localStorage, ustaw domyślny motyw
          document.documentElement.classList.remove("dark");
          document.documentElement.classList.add("light");
        }
      })();
      `}
    />
  </head>
  <body class="bg-background text-foreground">
    <ThemeWrapper client:only="react" />
    {showNavbar && <Navbar userEmail={userEmail} currentPath={currentPath} />}
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
