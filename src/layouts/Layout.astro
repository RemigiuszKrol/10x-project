---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";

interface Props {
  title?: string;
  showNavbar?: boolean;
}

const { title = "PlantsPlaner", showNavbar = false } = Astro.props;

// Pobierz dane użytkownika z locals (jeśli jest zalogowany)
const user = Astro.locals.user;
const userEmail = user?.email;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {showNavbar && <Navbar userEmail={userEmail} currentPath={currentPath} />}
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
